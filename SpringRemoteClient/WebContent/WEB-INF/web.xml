<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>SpringRemoteClient</display-name>
	<welcome-file-list>
		
		<welcome-file>index.jsp</welcome-file>
		
	</welcome-file-list>

	<!-- Spring configuration This reads in all META-INF/applicationContext.xml 
		files from the classpath, including jar files -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>
	<!-- This listener loads the Spring application context at startup. See 
		the context parameter, contextConfigLocation, for the file names that will 
		be loaded -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
</web-app>