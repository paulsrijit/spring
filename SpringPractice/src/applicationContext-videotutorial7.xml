<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean id="triangle" class="spring.practice.javabrains.videotutorial7.Triangle">
	   <property name="pointA" ref="zeroPoint"/>
	   <property name="pointB" ref="point1"/>
	   <property name="pointC" ref="point2"/>
   </bean>

	<bean id="zeroPoint" class="spring.practice.javabrains.videotutorial7.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="point1" class="spring.practice.javabrains.videotutorial7.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="point2" class="spring.practice.javabrains.videotutorial7.Point">
		<property name="x" value="20"/>
		<property name="y" value="0"/>
	</bean>

</beans>